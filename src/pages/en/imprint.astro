---
import BaseLayout from "../../layouts/BaseLayout.astro";
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
const locale = "en";
---

<BaseLayout
  title="Imprint – Plantoclean"
  description="Legal notice and provider identification for Plantoclean Garden & Landscape Care."
  locale={locale}
>
  <!-- Hero Header -->
  <section class="py-12 md:py-20 bg-white border-b border-gray-100">
    <div class="max-w-3xl mx-auto px-6">
      <nav class="flex mb-4 text-sm text-slate-500 no-print">
        <a class="hover:text-primary transition-colors" href={`${base}/en/`}>Home</a>
        <span class="mx-2">/</span>
        <span class="text-primary font-medium">Imprint</span>
      </nav>
      <h1 class="text-4xl md:text-5xl font-extrabold text-anthracite leading-tight">
        Imprint
      </h1>
      <p class="mt-4 text-lg text-slate-600 max-w-2xl">
        Legal provider identification and mandatory information for
        Plantoclean Garden & Landscape Care.
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 md:py-16">
    <article class="max-w-3xl mx-auto px-6">
      <!-- Information according to § 5 TMG -->
      <div class="mb-12">
        <div class="flex items-center gap-3 mb-6">
          <div class="h-1 w-10 bg-primary rounded"></div>
          <h2 class="text-xl font-bold text-anthracite uppercase tracking-wider">
            Information according to § 5 TMG
          </h2>
        </div>
        <div class="bg-white p-8 rounded-xl border border-gray-100 shadow-sm">
          <p class="text-lg font-semibold mb-2">
            Plantoclean Garten- und Landschaftspflege
          </p>
          <p class="text-slate-600 leading-relaxed">
            Owner: Daniel Schoknecht<br />
            Werther Straße 30<br />
            41540 Dormagen<br />
            North Rhine-Westphalia, Germany
          </p>
        </div>
      </div>

      <!-- Represented by -->
      <div class="mb-12">
        <h2 class="text-xl font-bold text-anthracite mb-6">
          Represented by
        </h2>
        <p class="text-slate-600 pl-4 border-l-2 border-primary/30">
          Daniel Schoknecht (Managing Director)
        </p>
      </div>

      <!-- Contact -->
      <div class="mb-12">
        <h2 class="text-xl font-bold text-anthracite mb-6">Contact</h2>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="flex items-start gap-4 p-4 rounded-lg bg-primary/5 border border-primary/10">
            <span class="material-icons text-primary mt-1">phone</span>
            <div>
              <p class="text-xs uppercase text-slate-500 font-bold mb-1">Phone</p>
              <p class="text-anthracite font-medium">
                <a href="tel:+492133215181">02133-215181</a>
              </p>
            </div>
          </div>
          <div class="flex items-start gap-4 p-4 rounded-lg bg-primary/5 border border-primary/10">
            <span class="material-icons text-primary mt-1">mail</span>
            <div>
              <p class="text-xs uppercase text-slate-500 font-bold mb-1">Email</p>
              <p class="text-anthracite font-medium">
                <a href="mailto:info@plantoclean.de">info@plantoclean.de</a>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- VAT ID -->
      <div class="mb-12">
        <h2 class="text-xl font-bold text-anthracite mb-6">VAT ID</h2>
        <p class="text-slate-600">
          VAT identification number according to §27 a of the German VAT Act:<br />
          <span class="font-mono text-anthracite">DE [Placeholder]</span>
        </p>
      </div>

      <!-- Editorially responsible -->
      <div class="mb-12">
        <h2 class="text-xl font-bold text-anthracite mb-6">
          Editorially Responsible
        </h2>
        <p class="text-slate-600">
          Daniel Schoknecht<br />
          Werther Straße 30<br />
          41540 Dormagen
        </p>
      </div>

      <!-- Dispute Resolution -->
      <div class="mb-12">
        <h2 class="text-xl font-bold text-anthracite mb-6">
          Dispute Resolution
        </h2>
        <div class="text-slate-600 leading-relaxed space-y-4">
          <p>
            The European Commission provides a platform for online dispute
            resolution (ODR):
            <a
              class="text-primary hover:underline font-medium"
              href="https://ec.europa.eu/consumers/odr"
              target="_blank"
              rel="noopener noreferrer"
            >https://ec.europa.eu/consumers/odr</a>.
            Our email address can be found above in the imprint.
          </p>
          <p>
            We are neither willing nor obliged to participate in dispute
            resolution proceedings before a consumer arbitration board.
          </p>
        </div>
      </div>

      <!-- Divider -->
      <div class="h-px w-full bg-gray-200 my-16"></div>

      <!-- Footer actions -->
      <div class="flex flex-col md:flex-row justify-between items-center gap-6 text-sm text-slate-500 no-print pb-8">
        <p>&copy; 2026 Plantoclean. All rights reserved.</p>
        <div class="flex gap-6">
          <a class="hover:text-primary transition-colors" href={`${base}/en/privacy`}>Privacy Policy</a>
          <a class="hover:text-primary transition-colors" href={`${base}/en/disclaimer`}>Disclaimer</a>
          <button
            class="flex items-center gap-1 hover:text-primary transition-colors"
            onclick="window.print()"
          >
            <span class="material-icons text-base">print</span> Print page
          </button>
        </div>
      </div>
    </article>
  </section>
</BaseLayout>
