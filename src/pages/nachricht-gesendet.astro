---
import "../styles/global.css";
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<!doctype html>
<html lang="de" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vielen Dank – Plantoclean</title>
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
    />
  </head>
  <body class="font-[Inter] bg-background-light text-anthracite antialiased">
    <!-- Background Decorations -->
    <div class="fixed inset-0 -z-10 pointer-events-none overflow-hidden">
      <div class="absolute -top-40 -left-40 w-96 h-96 bg-primary/10 rounded-full blur-3xl"></div>
      <div class="absolute top-1/3 -right-32 w-80 h-80 bg-primary/8 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 left-1/3 w-96 h-96 bg-primary/6 rounded-full blur-3xl"></div>
    </div>

    <div class="min-h-screen flex flex-col">
      <!-- Simple Header: Logo Centered -->
      <header class="flex items-center justify-center py-8">
        <a href={`${base}/`} class="flex items-center gap-2">
          <div
            class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center"
          >
            <span class="material-icons text-white">eco</span>
          </div>
          <span class="text-2xl font-bold tracking-tight text-primary uppercase">
            Plantoclean
          </span>
        </a>
      </header>

      <!-- Main Content -->
      <main class="flex-grow flex items-center justify-center px-6">
        <div class="max-w-2xl mx-auto text-center">
          <!-- Success Icon with Glow -->
          <div class="relative inline-flex items-center justify-center mb-10">
            <div class="absolute w-24 h-24 bg-primary/20 rounded-full scale-150 blur-xl"></div>
            <div class="relative w-24 h-24 bg-primary rounded-full flex items-center justify-center shadow-lg">
              <span class="material-icons text-white text-5xl">check</span>
            </div>
          </div>

          <!-- Heading -->
          <h1 class="text-4xl md:text-5xl font-extrabold text-primary mb-6 tracking-tight">
            Vielen Dank für Ihre Nachricht!
          </h1>

          <!-- Description -->
          <p class="text-lg md:text-xl text-slate-600 leading-relaxed mb-10 max-w-xl mx-auto">
            Wir haben Ihre Anfrage erhalten und melden uns schnellstmöglich bei
            Ihnen – in der Regel innerhalb von 24 Stunden.
          </p>

          <!-- Back Button -->
          <a
            href={`${base}/`}
            class="inline-flex items-center gap-2 bg-primary text-white px-8 py-3.5 rounded-lg font-semibold hover:bg-primary/90 transition-all shadow-md hover:shadow-lg text-base"
          >
            <span class="material-icons text-[20px]">arrow_back</span>
            Zurück zur Startseite
          </a>

          <!-- Decorative Icons -->
          <div class="flex items-center justify-center gap-8 mt-16">
            <span class="material-icons text-primary text-4xl opacity-30">eco</span>
            <span class="material-icons text-primary text-4xl opacity-30">grass</span>
            <span class="material-icons text-primary text-4xl opacity-30">spa</span>
          </div>
        </div>
      </main>

      <!-- Simple Footer -->
      <footer class="py-8 px-6">
        <div class="max-w-4xl mx-auto">
          <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-slate-500">
            <!-- Copyright -->
            <p>&copy; 2026 Plantoclean. Alle Rechte vorbehalten.</p>

            <!-- Links -->
            <div class="flex items-center gap-6">
              <a href={`${base}/impressum`} class="hover:text-primary transition-colors">
                Impressum
              </a>
              <a href={`${base}/datenschutz`} class="hover:text-primary transition-colors">
                Datenschutz
              </a>
              <a href={`${base}/kontakt`} class="hover:text-primary transition-colors">
                Kontakt
              </a>
            </div>

            <!-- NRW Location Badge -->
            <div class="flex items-center gap-1.5 text-slate-400">
              <span class="material-icons text-base">location_on</span>
              <span class="text-xs">NRW, Deutschland</span>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
