---
import PreviewLayout from "../../layouts/PreviewLayout.astro";
import ServiceAreaMap from "../../components/sections/ServiceAreaMap.astro";
import ServiceAreaCities from "../../components/sections/variants/ServiceAreaCities.astro";
---

<PreviewLayout title="Einsatzgebiet">
  <div class="py-8 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
    <h1 class="text-2xl font-bold text-primary mb-1">Einsatzgebiet</h1>
    <p class="text-anthracite/60 text-sm mb-8">Darstellung des Einzugsgebiets rund um Dormagen</p>
  </div>

  <!-- Variante A -->
  <div class="border-t-4 border-primary">
    <div class="bg-primary/5 px-4 sm:px-6 lg:px-8 py-3">
      <div class="max-w-7xl mx-auto flex items-center gap-2">
        <span class="bg-primary text-white text-xs font-bold px-2.5 py-1 rounded">A</span>
        <span class="font-semibold text-sm text-anthracite">Aktuell (Leaflet-Karte mit 80 km Radius)</span>
      </div>
    </div>
    <ServiceAreaMap />
  </div>

  <!-- Variante B -->
  <div class="border-t-4 border-accent mt-12">
    <div class="bg-accent/5 px-4 sm:px-6 lg:px-8 py-3">
      <div class="max-w-7xl mx-auto flex items-center gap-2">
        <span class="bg-accent text-white text-xs font-bold px-2.5 py-1 rounded">B</span>
        <span class="font-semibold text-sm text-anthracite">Städte-Übersicht (22+ Städte nach Entfernung gruppiert)</span>
      </div>
    </div>
    <ServiceAreaCities />
  </div>
</PreviewLayout>
