---
import PreviewLayout from "../../layouts/PreviewLayout.astro";
const base = import.meta.env.BASE_URL.replace(/\/$/, "");

const sections = [
  { slug: "hero", name: "Hero", icon: "photo_camera", desc: "Hauptbanner mit Bild, Headline und CTAs", variants: 1 },
  { slug: "usp", name: "USP Grid", icon: "star", desc: "Vier Alleinstellungsmerkmale im Karten-Grid", variants: 1 },
  { slug: "map", name: "Einsatzgebiet", icon: "map", desc: "Karte oder Städte-Übersicht rund um Dormagen", variants: 2 },
  { slug: "services-preview", name: "Leistungs-Vorschau", icon: "home_repair_service", desc: "Drei Service-Karten mit Bildern", variants: 1 },
  { slug: "testimonials", name: "Kundenstimmen", icon: "format_quote", desc: "Testimonial-Karten mit Bewertungen", variants: 2 },
  { slug: "seasonal-tip", name: "Saisonaler Tipp", icon: "eco", desc: "Monatlicher Pflegetipp mit Kalender-Link", variants: 1 },
  { slug: "cta", name: "CTA Banner", icon: "campaign", desc: "Call-to-Action mit Kontakt-Buttons und Badges", variants: 1 },
  { slug: "wildlife", name: "Tierfreundlicher Garten", icon: "pets", desc: "Neue Sektion: Saisonaler Leitfaden für naturnahes Gärtnern", variants: 1, isNew: true },
  { slug: "farbschema", name: "Farbschema", icon: "palette", desc: "Gesamte Startseite in alternativen Farbpaletten (Kleeblatt)", variants: 2, isNew: true },
];
---

<PreviewLayout title="Übersicht">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold text-primary mb-2">Sektions-Varianten</h1>
    <p class="text-anthracite/60 mb-10">Wähle eine Sektion, um alle Design-Varianten zu vergleichen.</p>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {sections.map((s) => (
        <a
          href={`${base}/versionen/${s.slug}/`}
          class="group bg-white rounded-xl border border-primary/10 p-6 hover:shadow-lg hover:border-primary/30 transition-all"
        >
          <div class="flex items-center gap-3 mb-3">
            <span class="material-icons text-primary text-2xl">{s.icon}</span>
            <h2 class="font-bold text-lg text-anthracite group-hover:text-primary transition-colors">{s.name}</h2>
          </div>
          <p class="text-sm text-anthracite/60 mb-4">{s.desc}</p>
          <div class="flex items-center justify-between">
            <span class="text-xs bg-primary/10 text-primary px-3 py-1 rounded-full font-medium">
              {s.variants} {s.variants === 1 ? "Variante" : "Varianten"}
            </span>
            {s.isNew && <span class="text-xs bg-accent text-white px-2 py-0.5 rounded font-bold">NEU</span>}
            <span class="material-icons text-primary/40 group-hover:text-primary transition-colors text-xl">arrow_forward</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</PreviewLayout>
