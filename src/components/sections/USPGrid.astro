---
import { type Locale, t } from "../../i18n";

interface Props {
  locale?: Locale;
}

const { locale = "de" } = Astro.props;

const usps = [
  {
    icon: "verified",
    title: t(locale, "usp.experience.title"),
    description: t(locale, "usp.experience.desc"),
  },
  {
    icon: "event_available",
    title: t(locale, "usp.flexibility.title"),
    description: t(locale, "usp.flexibility.desc"),
  },
  {
    icon: "handshake",
    title: t(locale, "usp.uncomplicated.title"),
    description: t(locale, "usp.uncomplicated.desc"),
  },
  {
    icon: "speed",
    title: t(locale, "usp.fast.title"),
    description: t(locale, "usp.fast.desc"),
  },
];
---

<section class="py-24 px-6 bg-background-light">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="text-accent uppercase tracking-widest text-sm font-semibold">{t(locale, "usp.label")}</span>
      <h2 class="text-3xl md:text-4xl font-bold text-anthracite mt-3">
        {t(locale, "usp.headline")}
      </h2>
    </div>

    <!-- USP Cards Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {usps.map((usp) => (
        <div class="bg-white p-8 rounded-2xl shadow-sm border border-primary/5 hover:border-primary/20 hover:-translate-y-1 transition">
          <div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
            <span class="material-icons text-primary text-3xl">{usp.icon}</span>
          </div>
          <h3 class="text-xl font-semibold text-anthracite mb-3">{usp.title}</h3>
          <p class="text-anthracite/70 leading-relaxed">{usp.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
