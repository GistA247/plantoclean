---
import { type Locale, t } from "../../i18n";

interface Props {
  locale?: Locale;
}

const { locale = "de" } = Astro.props;

const testimonials = [
  {
    quote: t(locale, "testimonials.1.quote"),
    name: t(locale, "testimonials.1.name"),
    role: t(locale, "testimonials.1.role"),
    icon: "person",
  },
  {
    quote: t(locale, "testimonials.2.quote"),
    name: t(locale, "testimonials.2.name"),
    role: t(locale, "testimonials.2.role"),
    icon: "business",
  },
  {
    quote: t(locale, "testimonials.3.quote"),
    name: t(locale, "testimonials.3.name"),
    role: t(locale, "testimonials.3.role"),
    icon: "person",
  },
];
---

<section class="py-24 px-6 bg-white">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="text-accent uppercase tracking-widest text-sm font-semibold">{t(locale, "testimonials.label")}</span>
      <h2 class="text-3xl md:text-4xl font-bold text-anthracite mt-3">
        {t(locale, "testimonials.headline")}
      </h2>
    </div>

    <!-- Testimonial Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {testimonials.map((testimonial) => (
        <div class="bg-background-light p-8 rounded-2xl border border-primary/5">
          <!-- Star Rating -->
          <div class="flex gap-1 mb-4">
            {[...Array(5)].map(() => (
              <span class="material-icons text-primary text-xl">star</span>
            ))}
          </div>

          <!-- Quote -->
          <p class="text-anthracite/80 italic leading-relaxed mb-6">
            &ldquo;{testimonial.quote}&rdquo;
          </p>

          <!-- Author -->
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
              <span class="material-icons text-primary">{testimonial.icon}</span>
            </div>
            <div>
              <p class="font-semibold text-anthracite">{testimonial.name}</p>
              <p class="text-sm text-anthracite/60">{testimonial.role}</p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Placeholder Note -->
    <p class="text-center text-primary/40 italic text-sm mt-10">
      {t(locale, "testimonials.placeholder")}
    </p>
  </div>
</section>
