---
import { type Locale, t } from "../../i18n";
import { servicePreviewCards } from "../../data/images";

interface Props {
  locale?: Locale;
}

const { locale = "de" } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
const servicesHref = `${base}${locale === "en" ? "/en/services" : "/leistungen"}`;

const services = servicePreviewCards.map((card) => ({
  title: t(locale, `services.${card.key}.title`),
  subtitle: t(locale, `services.${card.key}.subtitle`),
  image: card.image.url,
  imageAlt: card.image.alt[locale],
}));
---

<section class="py-24 px-6 bg-background-light">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-anthracite mb-4">
        {t(locale, "services.headline")}
      </h2>
      <p class="text-anthracite/70 max-w-2xl mx-auto leading-relaxed mb-6">
        {t(locale, "services.subtitle")}
      </p>
      <a
        href={servicesHref}
        class="inline-flex items-center gap-1 text-primary font-semibold hover:text-primary-light transition-colors"
      >
        {t(locale, "services.linkText")}
        <span class="material-icons text-lg">arrow_forward</span>
      </a>
    </div>

    <!-- Service Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {services.map((service) => (
        <div class="group relative overflow-hidden rounded-2xl h-80">
          <!-- Image -->
          <img
            src={service.image}
            alt={service.imageAlt}
            class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            loading="lazy"
          />

          <!-- Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-primary/90 to-transparent"></div>

          <!-- Text Content -->
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <h3 class="text-2xl font-bold mb-1">{service.title}</h3>
            <p class="text-white/80">{service.subtitle}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
