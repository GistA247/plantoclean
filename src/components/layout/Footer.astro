---
import { type Locale, t } from "../../i18n";

interface Props {
  locale?: Locale;
}

const { locale = "de" } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
const servicesPage = locale === "en" ? "/en/services" : "/leistungen";
---

<footer class="bg-primary text-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div
      class="grid grid-cols-1 md:grid-cols-4 gap-12 border-b border-white/10 pb-16"
    >
      <!-- Brand -->
      <div class="col-span-1 md:col-span-1">
        <div class="flex items-center gap-2 mb-6">
          <img src={`${base}/images/logo/kleeblatt.svg`} alt="" class="w-8 h-8" />
          <img src={`${base}/images/logo/logotext.png`} alt="Plantoclean" class="h-7 brightness-0 invert" />
        </div>
        <p class="text-white/70 leading-relaxed">
          {t(locale, "footer.tagline")}
        </p>
      </div>

      <!-- Kontakt -->
      <div>
        <h6 class="font-bold mb-6 text-lg">{t(locale, "footer.contact")}</h6>
        <ul class="space-y-4 text-white/70">
          <li class="flex items-start gap-3">
            <span class="material-icons text-accent">location_on</span>
            Werther Stra√üe 30, 41540 Dormagen
          </li>
          <li class="flex items-center gap-3">
            <span class="material-icons text-accent">phone</span>
            <a href="tel:+492133215181" class="hover:text-white transition-colors">02133-215181</a>
          </li>
          <li class="flex items-center gap-3">
            <span class="material-icons text-accent">email</span>
            <a href="mailto:info@plantoclean.de" class="hover:text-white transition-colors">info@plantoclean.de</a>
          </li>
        </ul>
      </div>

      <!-- Links -->
      <div>
        <h6 class="font-bold mb-6 text-lg">{t(locale, "footer.legal")}</h6>
        <ul class="space-y-4 text-white/70">
          <li>
            <a
              class="hover:text-white transition-colors"
              href={`${base}${locale === "en" ? "/en/imprint" : "/impressum"}`}>{t(locale, "footer.legal.imprint")}</a
            >
          </li>
          <li>
            <a
              class="hover:text-white transition-colors"
              href={`${base}${locale === "en" ? "/en/privacy" : "/datenschutz"}`}>{t(locale, "footer.legal.privacy")}</a
            >
          </li>
          <li>
            <a
              class="hover:text-white transition-colors"
              href={`${base}${locale === "en" ? "/en/disclaimer" : "/haftungsausschluss"}`}>{t(locale, "footer.legal.disclaimer")}</a
            >
          </li>
        </ul>
      </div>

      <!-- Leistungen -->
      <div>
        <h6 class="font-bold mb-6 text-lg">{t(locale, "footer.services")}</h6>
        <ul class="space-y-4 text-white/70">
          <li>
            <a class="hover:text-white transition-colors" href={`${base}${servicesPage}#gruenschnitt`}
              >{t(locale, "footer.services.mowing")}</a
            >
          </li>
          <li>
            <a class="hover:text-white transition-colors" href={`${base}${servicesPage}#jahrespflege`}
              >{t(locale, "footer.services.yearround")}</a
            >
          </li>
          <li>
            <a class="hover:text-white transition-colors" href={`${base}${servicesPage}#rueckschnitt`}
              >{t(locale, "footer.services.pruning")}</a
            >
          </li>
          <li>
            <a class="hover:text-white transition-colors" href={`${base}${servicesPage}#beischnitt`}
              >{t(locale, "footer.services.trimming")}</a
            >
          </li>
        </ul>
      </div>
    </div>

    <div
      class="mt-12 flex flex-col md:flex-row justify-between items-center text-white/50 text-sm"
    >
      <p>&copy; {t(locale, "footer.copyright")}</p>
      <p class="mt-4 md:mt-0">{t(locale, "footer.slogan")}</p>
    </div>
  </div>
</footer>
